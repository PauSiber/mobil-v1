<?xml version='1.0' encoding='utf-8'?>
<widget id="com.thelastcodebenders.pausiber" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PaüSiber</name>
    <description>
        Paü siber topluluğu için geliştirilmiş mobil uygulama
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
      <!-- you can use any density that exists in the Android project -->
      <splash src="res/screen/android/logo7.png" density="land-hdpi"/>
      <splash src="res/screen/android/logo7.png" density="land-ldpi"/>
      <splash src="res/screen/android/logo7.png" density="land-mdpi"/>
      <splash src="res/screen/android/logo7.png" density="land-xhdpi"/>

      <splash src="res/screen/android/logo7.png" density="port-hdpi"/>
      <splash src="res/screen/android/logo7.png" density="port-ldpi"/>
      <splash src="res/screen/android/logo7.png" density="port-mdpi"/>
      <splash src="res/screen/android/logo7.png" density="port-xhdpi"/>
      <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
  </platform>

  <platform name="ios">
      <!-- images are determined by width and height. The following are supported -->
      <splash src="res/screen/ios/logo7.png" width="320" height="480"/>
      <splash src="res/screen/ios/logo7.png" width="640" height="960"/>
      <splash src="res/screen/ios/logo7.png" width="768" height="1024"/>
      <splash src="res/screen/ios/logo7.png" width="1536" height="2048"/>
      <splash src="res/screen/ios/logo7.png" width="1024" height="768"/>
      <splash src="res/screen/ios/logo7.png" width="2048" height="1536"/>
      <splash src="res/screen/ios/logo7.png" width="640" height="1136"/>
      <splash src="res/screen/ios/logo7.png" width="750" height="1334"/>
      <splash src="res/screen/ios/logo7.png" height="2208"/>
      <splash src="res/screen/ios/logo7.png" width="2208" height="1242"/>

      <!-- iOS 8.0+ -->
       <!-- iPhone 6 Plus  -->
       <icon src="res/icon/ios/xhdpi.png" width="180" height="180" />
       <!-- iOS 7.0+ -->
       <!-- iPhone / iPod Touch  -->
       <icon src="res/icon/ios/xhdpi.png" width="60" height="60" />
       <icon src="res/icon/ios/xhdpi.png" width="120" height="120" />
       <!-- iPad -->
       <icon src="res/icon/ios/xhdpi.png" width="76" height="76" />
       <icon src="res/icon/ios/xhdpi.png" width="152" height="152" />
       <!-- iOS 6.1 -->
       <!-- Spotlight Icon -->
       <icon src="res/icon/ios/xhdpi.png" width="40" height="40" />
       <icon src="res/icon/ios/xhdpi.png" width="80" height="80" />
       <!-- iPhone / iPod Touch -->
       <icon src="res/icon/ios/xhdpi.png" width="57" height="57" />
       <icon src="res/icon/ios/xhdpi.png" width="114" height="114" />
  </platform>
  <platform name="browser">
    <preference name="SplashScreen" value="/images/browser/splashscreen.jpg" /> <!-- defaults to "/img/logo.png" -->
    <preference name="SplashScreenDelay" value="3000" /> <!-- defaults to "3000" -->
    <preference name="SplashScreenBackgroundColor" value="green" /> <!-- defaults to "#464646" -->
    <preference name="ShowSplashScreen" value="false" /> <!-- defaults to "true" -->
    <preference name="SplashScreenWidth" value="600" /> <!-- defaults to "170" -->
    <preference name="SplashScreenHeight" value="300" /> <!-- defaults to "200" -->
</platform>
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="SplashScreenDelay" value="2000" />

  </widget>
